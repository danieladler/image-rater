<h1>Account page for: <strong><%= @current_user.username %></strong></h1>

<!-- Account details if user being viewed is user who is signed in -->
<div class="row">
  <div class="col-sm-12">
    <ul class="user-account-details">
      <li>
        <strong>username:</strong> <%= @current_user.username %>
      </li>
      <li>
        <strong>e-mail address:</strong> <%= @current_user.email %>
        <!-- <button class="btn btn-sm btn-info">Update</button> -->
      </li>
    </ul>
        <%= form_tag update_user_path do %>
          <div class="form-group update-email-form col-lg-6">
            <input type="email", name="email", placeholder=" <%= @current_user.email %>", class="form-control">
          </div>
          <input type="submit", value="update e-mail", class="btn btn-md btn-primary">
        <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 all-user-photos-previews">
    <h2>My Images</h2>
    <% @current_user.photos.sort.in_groups_of(4, false).each do |group| %>
      <div class="row">
        <% group.each do |p| %>
          <div class="col-lg-3 preview-photo-block">
            <%= link_to image_tag(p.image_file.preview), photo_path(p.id) %><br>
            uploaded on: <%= p.created_at.strftime("%m/%d/%Y") %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
