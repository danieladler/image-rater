<% if @current_user %>
  <% if @current_user.id == @user.id %>
    <%= render "layouts/account_details" %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-lg-12 all-user-photos-previews">
    <div id="user-avatar-title">
      <%= image_tag @user.avatar, :class=>"avatar avatar-img-show" %>
      <h2><%= @user.username.capitalize %>'s  Images</h2>
    </div>
    <% @user.photos.sort.in_groups_of(4, false).each do |group| %>
      <div class="row">
        <% group.each do |p| %>
          <div class="col-lg-3 preview-photo-block">
            <%= link_to image_tag(p.image_file.preview), photo_path(p.id) %><br>
            uploaded on: <%= p.created_at.strftime("%m/%d/%Y") %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
