<div class="row">
  <div class="col-sm-12 user-account-container">
    <h2>Account details for: <strong><%= @current_user.username %></strong></h2>
    <ul class="user-account-details">
      <li>
        <strong>username:</strong> <%= @current_user.username %>
      </li>
      <li>
        <strong>avatar:</strong> <%= image_tag @current_user.avatar, :class=>"avatar avatar-img-show"%>
      </li>
      <li>
        <strong>e-mail address:</strong> <%= @current_user.email %>
        <!-- <button class="btn btn-sm btn-info">Update</button> -->
      </li>
    </ul>
    <div class="user-email-settings">
      <strong>e-mail settings:</strong>
      <%= form_tag update_user_path(@user.id) do %>
          <div class="form-group update-email-settings-form col-lg-6">
            <p>Would you like to receive emails when other users comment on your photos?</p>
            <%= radio_button_tag(:receive, true) %>
            <%= label_tag(:receive_yes, "Yes")  %>
            <%= radio_button_tag(:receive, false)  %>
            <%= label_tag(:receive_no, "No")      %>

            <%= submit_tag("submit") %>
          </div>
        <% end %>
          <%= form_tag update_user_path(@user.id) do %>
            <div class="form-group update-email-address-form col-lg-6">
              <input type="email", name="email", placeholder="<%= @current_user.email%>", class="form-control">
            </div>
            <input type="submit", value="update e-mail", class="btn btn-md btn-primary">
          <% end %>
    </div>
  </div>
</div>
