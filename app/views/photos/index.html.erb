<div class="row">
  <div class="col-lg-12 all-photos">
    <% @photos.in_groups_of(2, false).each do |group| %>
      <div class="row">
        <% group.each do |p| %>
          <div class="col-lg-6 index-photo-block">
            <%= link_to image_tag(p.image_file.square), photo_path(p.id) %><br>
            <strong><%= link_to p.title, photo_path(p.id) %></strong><br>
            <%= p.description %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="add-photo-container">
  <button class="btn btn-lg btn-info col-lg-6 col-lg-push-3 col-sm-6 col-sm-push-3">
    <%= link_to "Add new photo", new_photo_path %>
  </button>
</div>
