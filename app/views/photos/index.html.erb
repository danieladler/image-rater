<div class="row">
  <div class="col-lg-12 all-photos">
    <% @photos.shuffle.in_groups_of(2, false).each do |group| %>
      <div class="row">
        <% group.each do |p| %>
          <div class="col-lg-6 index-photo-block">
            <%= link_to image_tag(p.image_file.index), photo_path(p.id) %><br>
            <div class="col-log-6 index-photo-details">
              <div class="index-details-left">
                <%= link_to p.title, photo_path(p.id) %>
              </div>
              <div class="index-details-right">
                <span>by</span> <span class="index-username"><%=link_to p.user.username, user_path(p.user.id)%></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="add-photo-container">
    <button class="btn btn-lg btn-info col-lg-6 col-lg-push-3 col-sm-6 col-sm-push-3">
      <%= link_to "Add new photo", new_photo_path %>
    </button>
  </div>
</div>
